BASE="/workdir/users/agk85/press2"
SAMPLES, = glob_wildcards(BASE + "/todo/{NAME}")
NB_SAMPLES = len(SAMPLES)
print (SAMPLES)
#for NAME in SAMPLES:
#  print("Sample " + NAME + " will be processed")

rule final:
	input:
		expand(BASE + "/mapping/references/{NAME}_scaffold.sa", NAME=SAMPLES),
rule bwa_index:
	input:
		SCF=BASE + "/prodigal_excise/metagenomes/{NAME}/{NAME}_scaffold.fasta"
	params:
		name="{NAME}_scaffold",
		n="{NAME}_bwa_index",
		out=BASE+"/mapping/references/"
	resources:
		mem_mb=lambda wildcards, attempt: attempt * 50,
	output:
		FA=BASE + "/mapping/references/{NAME}_scaffold.sa"
	message:  """--- BWA INDEX"""
	shell: """
		cd {params.out}
		/programs/bwa-0.7.8/bwa index -a bwtsw -p {params.name} {input.SCF}
		"""
